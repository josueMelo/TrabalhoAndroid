<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#00FFFFFF"
    android:foregroundGravity="center"
    android:verticalScrollbarPosition="left"
    app:layout_anchorGravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtStudentsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/contributors"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/txtNomes"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:text="Higor Viana de Morais \nJosuÃ© Batista Matos Deschamps de Melo\nYgor Kaique de Souza Pinto\nRenan Tavares" />

        <TextView
            android:id="@+id/txtContactTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/contact"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:contextClickable="true"
            android:text="hjrysenac@gmail.com"
            android:autoLink="email"
            android:linksClickable="true"
            />

        <TextView
            android:id="@+id/txtSiteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/Site"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/txtSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:autoLink="web"
            android:clickable="true"
            android:contextClickable="true"
            android:linksClickable="true"
            android:text="https://www.sp.senac.br/" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
